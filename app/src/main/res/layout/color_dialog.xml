<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/color_radio_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <RadioButton
        android:id="@+id/rb_color_red"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/circle_color_red" />

    <RadioButton
        android:id="@+id/rb_color_green"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/circle_color_green" />


    <RadioButton
        android:id="@+id/rb_color_blue"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/circle_color_blue" />


    <RadioButton
        android:id="@+id/rb_color_purple"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/circle_color_purple" />


    <RadioButton
        android:id="@+id/rb_color_orange"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/circle_color_orange" />

</RadioGroup>