<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_card_view"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/project_color_image_view"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            tools:background="@color/colorProjectPurple" />

        <CheckBox
            android:id="@+id/item_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:buttonTint="@color/colorPriorityHigh" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@android:style/TextAppearance.Medium"
            tools:text="@string/error_duplicate_project_name" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            tools:text="@string/yesterday" />

    </LinearLayout>

</android.support.v7.widget.CardView>